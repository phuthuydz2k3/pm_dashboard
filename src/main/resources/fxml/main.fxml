<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_manager_dashboard.views.screens.MainView">
    <AnchorPane fx:id="contentArea" layoutX="40" layoutY="-14.0" prefHeight="841.0" prefWidth="1501.0" />
    <AnchorPane fx:id="drawerPane" prefHeight="824.0" prefWidth="260.0">
        <HBox prefHeight="47.0" prefWidth="200">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    <Image url="@../images/icons8-logo-50.png" />
                </image>
            </ImageView>
            <Label fx:id="aims" text="AIMS" textFill="#0d0c22">
                <font>
                    <Font name="SansSerif Regular" size="30.0" />
                </font>
            </Label>
        </HBox>
        <Button fx:id="btn1" layoutY="86.0" onAction="#loadProducts" prefHeight="53.0" prefWidth="237.0" text="Products">
            <graphic>
                <HBox>
                    <ImageView fitHeight="40" fitWidth="40">
                        <image>
                            <Image url="@../images/product_black.png" />
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
        </Button>
        <Button fx:id="btn2" layoutY="144.0" onAction="#loadOrders" prefHeight="53.0" prefWidth="237.0" text="Orders">
            <graphic>
                <HBox>
                    <ImageView fitHeight="40" fitWidth="40">
                        <image>
                            <Image url="@../images/order_black.png" />
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
        </Button>
        <Button fx:id="toggleBtn" layoutX="211.0" layoutY="1.0" onAction="#toggleMenu" prefHeight="25.0" prefWidth="25.0">
            <graphic>
                <HBox>
                    <ImageView fitHeight="25.0" fitWidth="25.0">
                        <image>
                            <Image url="@../images/black_open.png" />
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
        </Button>
        <Button fx:id="btn3" layoutY="734.0" onAction="#signout" prefHeight="53.0" prefWidth="237.0" text="Signout">
            <graphic>
                <HBox>
                    <ImageView fitHeight="40" fitWidth="40">
                        <image>
                            <Image url="@../images/logout-black.png" />
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
        </Button>
    </AnchorPane>
</AnchorPane>
