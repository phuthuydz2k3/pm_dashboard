<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.project_manager_dashboard.views.screens.ProductFormView"
            prefHeight="600.0" prefWidth="800.0">
    <VBox spacing="10" alignment="CENTER">
        <HBox spacing="10">
            <VBox spacing="10" alignment="CENTER">
                <Label text="Price"/>
                <TextField fx:id="priceTextField" promptText="Enter price"/>

                <Label text="Available Quantity"/>
                <TextField fx:id="availableTextField" promptText="Enter available quantity"/>

                <Label text="Name"/>
                <TextField fx:id="nameTextField" promptText="Enter name"/>

                <Label text="Image URL"/>
                <HBox>
                    <TextField fx:id="imageURLTextField" promptText="Enter image URL"/>
                    <Button text="Browse" onAction="#browseImage"/>
                </HBox>
                <ImageView fx:id="imageView" fitHeight="284.0" fitWidth="234.0" layoutX="34.0" layoutY="80.0" pickOnBounds="true" preserveRatio="true" onDragOver="#onDragOver" onDragDropped="#onDragDropped"/>

                <Label text="Category"/>
                <ChoiceBox fx:id="categoryChoiceBox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Book"/>
                            <String fx:value="CD"/>
                            <String fx:value="DVD"/>
                            <String fx:value="LP"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>

                <Label text="Weight"/>
                <TextField fx:id="weightTextField" promptText="Enter weight"/>

                <CheckBox fx:id="rushDeliveryCheckBox" text="Support Rush Delivery"/>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="saveBtn" text="Save" onAction="#saveMedia"/>
                    <Button fx:id="cancelBtn" text="Cancel" onAction="#cancelSaveMedia"/>
                </HBox>
            </VBox>
            <VBox fx:id="extraFieldsVBox" spacing="10" alignment="CENTER"/>
        </HBox>
    </VBox>
</AnchorPane>
