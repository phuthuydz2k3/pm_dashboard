<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="dbPU">
        <class>org.example.project_manager_dashboard.models.DeliveryInfo</class>
        <class>org.example.project_manager_dashboard.models.Order</class>
        <class>org.example.project_manager_dashboard.models.Media</class>
        <class>org.example.project_manager_dashboard.models.Book</class>
        <class>org.example.project_manager_dashboard.models.CD</class>
        <class>org.example.project_manager_dashboard.models.DVD</class>
        <class>org.example.project_manager_dashboard.models.LP</class>
        <properties>
            <!-- Database Connection Properties -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/aims"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="1"/>

            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
